@model component_composition.ViewModels.LoginModel

<h2>Вхід</h2>
<a asp-action="Register" asp-controller="Account">Реєстрація</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Email</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div><br />
            <div class="form-group">
                <input type="submit" value="Вхід" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</form>