@model component_composition.ViewModels.NewAggregateModel

@{
    ViewBag.Title = "Новий агрегат";
}

<h2>Створити новий агрегат</h2>

<form method="post" action="@Url.Action("CreateAggregate", "Home")" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Назва:</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Введіть назву агрегату">
    </div>
    <div class="form-group">
        <label for="Description">Опис:</label>
        <textarea class="form-control" id="Description" name="Description" placeholder="Введіть опис агрегату"></textarea>
    </div>
    <div class="form-group">
        <label for="Image">Зображення:</label>
        <input type="file" class="form-control" id="Image" name="Image" accept="image/*">
    </div>
    <button type="submit" class="btn btn-primary">Створити</button>
</form>